{
  "elements": [
    {
      "type": "Label",
      "caption": "IPS PowerAnalyzer - Konfiguration"
    },
    {
      "name": "ActiveControlID",
      "type": "SelectVariable",
      "caption": "Power Variable"
    },
    {
      "name": "TimerInterval",
      "type": "NumberSpinner",
      "caption": "Timer (Sekunden)",
      "suffix": "s",
      "minimum": 30,
      "maximum": 3600
    },
    {
      "name": "Months",
      "type": "NumberSpinner",
      "caption": "Analyse Monate",
      "minimum": 1,
      "maximum": 36
    },
    {
      "name": "EnableHeatmap",
      "type": "CheckBox",
      "caption": "Heatmap aktivieren"
    },
    {
      "name": "EnableDebug",
      "type": "CheckBox",
      "caption": "Debug-Logs schreiben"
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Jetzt analysieren",
      "onClick": "IPS_RequestAction($id, \"RunUpdate\", 1);"
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "inactive",
      "caption": "Instanz wird erstellt"
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "Instanz ist aktiv"
    },
    {
      "code": 104,
      "icon": "error",
      "caption": "Fehlerhafte Konfiguration"
    }
  ]
}
